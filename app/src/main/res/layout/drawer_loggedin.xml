<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:background="?attr/card_background"
    android:animateLayoutChanges="true"

    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginBottom="20dp"

        android:background="@color/md_light_blue_500">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-20dp"
            android:padding="57dp"
            android:src="@drawable/slogo" />

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="16dp"
            android:text="@string/drawer_hello"
            android:textColor="#fff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="-27dp"
            android:layout_toRightOf="@+id/welcome"
            android:padding="16dp"
            android:text="ccrama"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold" />


    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/expand"
            android:orientation="horizontal"
            android:paddingLeft="0dp"
            xmlns:android="http://schemas.android.com/apk/res/android">




        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/prof_click"
        android:background="?android:selectableItemBackground"

        android:orientation="horizontal"
        android:paddingLeft="0dp"
        android:layout_height="48dp">
        <ImageView
            android:layout_width="48dp"
            android:paddingLeft="10dp"
            android:tint="?attr/tint"

            android:paddingRight="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/profile"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="@string/drawer_profile"
            android:textColor="?attr/font"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />


    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:id="@+id/expand_profile"
        android:visibility="gone"
        android:weightSum="5"
        android:layout_marginLeft="24dp"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:text="@string/profile_yours"
            android:background="?android:selectableItemBackground"
            android:layout_height="42dp"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:orientation="horizontal"/>

        <TextView
            android:id="@+id/saved"
            android:layout_width="match_parent"
            android:text="@string/profile_saved"
            android:layout_height="42dp"
            android:textSize="14sp"
            android:background="?android:selectableItemBackground"

            android:gravity="center_vertical"
            android:orientation="horizontal"/>




        <TextView
            android:id="@+id/upvoted"
            android:layout_width="match_parent"
            android:text="@string/profile_upvoted"
            android:layout_height="42dp"
            android:textSize="14sp"
            android:background="?android:selectableItemBackground"

            android:gravity="center_vertical"
            android:orientation="horizontal"/>


        <TextView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:text="@string/editor_submit"
            android:layout_height="42dp"
            android:background="?android:selectableItemBackground"

            android:textSize="14sp"
            android:gravity="center_vertical"
            android:orientation="horizontal"/>
        <TextView
            android:id="@+id/reorder"
            android:layout_width="match_parent"
            android:text="@string/drawer_reorder_pins"
            android:layout_height="42dp"
            android:background="?android:selectableItemBackground"

            android:textSize="14sp"
            android:gravity="center_vertical"
            android:orientation="horizontal"/>
        <TextView
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:text="@string/drawer_add_account"
            android:background="?android:selectableItemBackground"

            android:layout_height="42dp"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:orientation="horizontal"/>
        <TextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:text="@string/drawer_change_account"
            android:background="?android:selectableItemBackground"

            android:layout_height="42dp"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:orientation="horizontal"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/inbox"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?android:selectableItemBackground"

        android:orientation="horizontal"
        android:paddingLeft="0dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingBottom="6dp"

            android:tint="?attr/tint"

            android:padding="10dp"
            android:src="@drawable/sidebar_inbox" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="?attr/font"

            android:text="@string/title_inbox"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/mod"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?android:selectableItemBackground"

        android:orientation="horizontal"
        android:paddingLeft="0dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingBottom="6dp"

            android:tint="?attr/tint"

            android:padding="10dp"
            android:src="@drawable/mod" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="?attr/font"

            android:text="@string/drawer_moderation"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/multi"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?android:selectableItemBackground"

        android:orientation="horizontal"
        android:paddingLeft="0dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingBottom="6dp"

            android:tint="?attr/tint"

            android:padding="10dp"
            android:src="@drawable/collection" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="?attr/font"

            android:text="@string/title_multireddits"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/support"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="?android:selectableItemBackground"

        android:paddingLeft="0dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingBottom="6dp"
            android:tint="?attr/tint"

            android:padding="10dp"
            android:src="@drawable/support" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="?attr/font"

            android:gravity="center_vertical"
            android:text="@string/drawer_support"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tablet"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="?android:selectableItemBackground"

        android:paddingLeft="0dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingBottom="6dp"
            android:tint="?attr/tint"

            android:padding="10dp"
            android:src="@drawable/multicolumn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="?attr/font"

            android:gravity="center_vertical"
            android:text="@string/drawer_multi_column"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/prof"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="?android:selectableItemBackground"

        android:paddingLeft="0dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:tint="?attr/tint"

            android:padding="10dp"
            android:src="@drawable/profile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="?attr/font"

            android:gravity="center_vertical"
            android:text="@string/drawer_goto_profile"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="?android:selectableItemBackground"

        android:paddingLeft="0dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:tint="?attr/tint"

            android:padding="10dp"
            android:src="@drawable/settings" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="?attr/font"

            android:gravity="center_vertical"
            android:text="@string/title_settings"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:alpha=".25" />

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/sort"
        android:textColor="?attr/font"
        android:textColorHint="?attr/font"
        android:hint="@string/drawer_search"
        android:singleLine="true"

        android:layout_marginLeft="16dp"
        android:imeOptions="actionSearch"

        android:backgroundTint="?attr/tint"
        android:layout_marginRight="16dp"


        android:layout_height="wrap_content" />
</LinearLayout>
