<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="?attr/card_background"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:background="?attr/card_background"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@color/md_light_green_500"

                    android:layout_height="160dp">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="24dp"
                    android:layout_above="@+id/subs"
                    android:text="/r/Android"
                    android:textSize="18dp"
                    android:textStyle="bold" />
                    <TextView
                        android:id="@+id/subs"
                        android:layout_width="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="203040 Subscribers"
                        android:textSize="14dp"
                        />
                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:padding="16dp"

                        android:layout_toRightOf="@+id/subs"
                        android:layout_height="wrap_content"
                        android:text="A sub for 2 years"
                        android:textSize="14dp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:id="@+id/body"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingBottom="20dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"

                        android:paddingTop="8dp">

                        <CheckBox
                            android:id="@+id/pinned"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:buttonTint="?attr/tint"
                            android:background="?android:selectableItemBackground"

                            android:backgroundTint="?attr/tint"
                            android:layout_marginTop="8dp"
                            android:textColorHint="?attr/font"
                            android:textColor="?attr/font"
                            android:text="PINNED" />
                        <CheckBox
                            android:id="@+id/subscribed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:buttonTint="?attr/tint"
                            android:background="?android:selectableItemBackground"

                            android:backgroundTint="?attr/tint"
                            android:layout_marginTop="8dp"
                            android:textColorHint="?attr/font"
                            android:textColor="?attr/font"
                            android:text="SUBSCRIBED" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:alpha=".8"
                            android:background="?attr/tint" />

                        <LinearLayout
                            android:id="@+id/sidebar"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:gravity="center_vertical"
                            android:background="?android:selectableItemBackground"

                            android:orientation="horizontal"
                            android:paddingRight="16dp">

                            <ImageView
                                android:layout_width="56dp"
                                android:layout_height="match_parent"
                                android:alpha=".86"
                                android:tint="?attr/tint"

                                android:padding="12dp"
                                android:src="@drawable/ic_format_quote_white_48dp" />

                            <TextView
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"

                                android:textColor="?attr/font"

                                android:text="View sidebar"

                                android:textSize="16sp" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/color"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:gravity="center_vertical"
                            android:background="?android:selectableItemBackground"

                            android:orientation="horizontal"
                            android:paddingRight="16dp">

                            <ImageView
                                android:layout_width="56dp"
                                android:layout_height="match_parent"
                                android:alpha=".86"
                                android:tint="?attr/tint"
                                android:id="@+id/colorExpandFrom"
                                android:padding="12dp"
                                android:src="@drawable/color" />

                            <TextView
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"

                                android:textColor="?attr/font"

                                android:text="Change color"

                                android:textSize="16sp" />

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/color2"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:gravity="center_vertical"
                            android:background="?android:selectableItemBackground"

                            android:orientation="horizontal"
                            android:paddingRight="16dp">

                            <ImageView
                                android:layout_width="56dp"
                                android:tint="?attr/tint"
                                android:layout_height="match_parent"
                                android:alpha=".86"
                                android:id="@+id/colorExpandFrom2"
                                android:padding="12dp"
                                android:src="@drawable/color" />

                            <TextView
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"

                                android:textColor="?attr/font"

                                android:text="Accent color"

                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/card"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:gravity="center_vertical"
                            android:background="?android:selectableItemBackground"

                            android:orientation="horizontal"
                            android:paddingRight="16dp">

                            <ImageView
                                android:layout_width="56dp"
                                android:layout_height="match_parent"
                                android:alpha=".86"
                                android:tint="?attr/tint"
                                android:padding="12dp"
                                android:src="@drawable/card" />

                            <TextView
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"

                                android:textColor="?attr/font"

                                android:text="Change card type for subreddit"

                                android:textSize="16sp" />

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:alpha=".8"
                            android:background="?attr/tint" />
                    </LinearLayout>


                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
</LinearLayout>