<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#aa000000"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_gravity="center"
        android:id="@+id/gifarea"
        android:gravity="center">

        <me.ccrama.redditslide.Views.MediaVideoView
            android:id="@+id/gif"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">

        </me.ccrama.redditslide.Views.MediaVideoView>

        <FrameLayout
            android:id="@+id/placeholder"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#dc000000" />
        <ProgressBar
            android:id="@+id/gifprogress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="100"
            android:progress="0" />
    </RelativeLayout>

    <me.ccrama.redditslide.Views.SubsamplingScaleImageView
        android:id="@+id/submission_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true" />
   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/gifheader"
        android:gravity="right|bottom"
        android:weightSum="6">
        <ImageView
            android:id="@+id/hq"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:theme="@style/Ripple.List"
            android:padding="15dp"
            app:srcCompat="@drawable/hd"
            android:tint="#e1e1e1" />
        <ImageView
            android:id="@+id/save"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:theme="@style/Ripple.List"
            android:padding="15dp"
            app:srcCompat="@drawable/save"
            android:tint="#e1e1e1" />
        <ImageView
            android:id="@+id/more"
            style="@style/Ripple.List"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:theme="@style/Ripple.List"
            android:layout_gravity="right"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            app:srcCompat="@drawable/more"
            android:tint="#e1e1e1" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:indeterminate="false"
        android:max="100"
        android:progress="0"
        android:visibility="invisible" />

</RelativeLayout>